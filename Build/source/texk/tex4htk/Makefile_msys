.c.o:
	$(COMPILE) -MT $@ -MD -MP -c -o $@ $<

.cpp.o:
	$(CXXCOMPILE) -MT $@ -MD -MP -c -o $@ $<

tex4ht.$(EXEEXT): $(OBJECTS) $(DEPENDENCIES)
	@rm -f t4ht$(EXEEXT)
	$(LINK) $(OBJECTS)

clean:
	-rm -f $(OBJECTS) tex4ht.$(EXEEXT)
